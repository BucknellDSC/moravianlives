  <teiHeader>
    <fileDesc>
      <titleStmt>
        <title>MemBeth TEI P5 ODD Customisation</title>
        <author xml:id="JAKA1">Diane Jakacki</author>
      </titleStmt>
      <publicationStmt>
        <authority>
          <name>Diane Jakacki</name>
          <email>diane.jakack@bucknell.edu</email>
        </authority>
